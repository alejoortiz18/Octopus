<main class="main-content  mt-0">
    <section>
        <div class="page-header min-vh-100">
            <div class="container">
                <div class="row">

                    <div class="col-xl-4 col-lg-5 col-md-7 d-flex flex-column ms-auto me-auto ms-lg-auto">
                        <div class="card  border border-light shadow-lg rounded-4">
                            <div class="card-header">
                                <h4 class="font-weight-bolder">Reiniciar contraseña</h4>
                                <p class="mb-0">El código de verificación llegará a su correo!</p>
                            </div>

                          
                            @if (datoDto == null)
                            {
                                <div class="card-body">

                                    <form asp-controller="Auth" asp-action="ResetPassword" method="post" asp-antiforgery="true">
                                        <div class="form-floating mb-3">

                                            @{
                                                var email = datoDto != null ? datoDto.Email : "";
                                                if (!string.IsNullOrEmpty(email))
                                                {
                                                    <input type="hidden" class="form-control" value="@email" id="email" name="username">
                                                }
                                            }

                                            <div class="input-group input-group-outline mb-3">
                                                <label asp-for="Email" class="form-label"></label>
                                                <input asp-for="Email" class="form-control" type="email" />
                                            </div>
                                            <div class="input-group input-group-outline mb-3 d-none">
                                                <input asp-for="Codigo" class="form-control" type="hidden" value="-1" />
                                            </div>

                                            
                                            <div class="container">

                                                <button type="submit" class="btn btn-primary py-3 w-100 mb-4">Enviar código</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            }
                        
                            
                            @if (datoDto!=null && datoDto.IsGenerated)
                            {
                                datoDto = null;
                                <div class="card-body">
                                    <form  method="post" role="form">

                                        <div class="input-group input-group-outline mb-3">
                                            <label asp-for="Email" class="form-label" disabled></label>
                                            <input asp-for="Email" class="form-control" type="Email" readonly/>
                                        </div>

                                        <span asp-validation-for="Email" class="text-danger"></span>

                                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                                        <div class="input-group input-group-outline mb-3">
                                            <label asp-for="NewPassword" class="form-label"></label>
                                            <input asp-for="NewPassword" class="form-control" type="password" />
                                        </div>

                                        <span asp-validation-for="RepeatNewPassword" class="text-danger"></span>
                                        <div class="input-group input-group-outline mb-3">
                                            <label asp-for="RepeatNewPassword" class="form-label"></label>
                                            <input asp-for="RepeatNewPassword" class="form-control" type="password" />
                                        </div>

                                        <span asp-validation-for="Codigo" class="text-danger"></span>
                                        <div class="input-group input-group-outline mb-3">
                                            <label asp-for="Codigo" class="form-label"></label>
                                            <input asp-for="Codigo" class="form-control" type="text" />
                                        </div>

                                   
                                        <div class="text-center">
                                            <button type="submit" id="enviar" class="btn btn-lg bg-gradient-primary btn-lg w-100 mt-4 mb-0">Enviar</button>
                                        </div>
                                    </form>
                                </div>
                            }

                            <div class="card-footer text-center pt-0 px-lg-2 px-1">
                                <p class="mb-2 text-sm mx-auto">
                                    Ya tienes una cuenta?
                                    <a asp-controller="Auth" asp-action="SignUp" class="text-primary text-gradient font-weight-bold">Iniciar sesión</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>


