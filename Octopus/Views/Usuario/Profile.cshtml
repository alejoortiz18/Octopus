                                    <div class="modal-content border-warning">
                                        <div class="modal-header bg-warning bg-gradient">
                                            <h5 class="modal-title text-dark" id="codigoReferenciaModalLabel">
                                                <i class="bi bi-exclamation-triangle-fill me-2"></i>Advertencia
                                            </h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                                        </div>
                                        <div class="modal-body text-dark">
                                            RECUERDA QUE AL CONTINUAR SIN UN CÓDIGO DE REFERENCIA NO PODRÁ CAMBIARLO DESPUÉS, ¿DESEA CONTINUAR?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" id="cancelarCodigoReferencia" data-bs-dismiss="modal">No</button>
                                            <button type="button" class="btn btn-warning" id="confirmarCodigoReferencia">Sí</button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            @section Scripts {
                                <script>
                                    document.addEventListener("DOMContentLoaded", function () {
                                        var form = document.getElementById('perfilForm');
                                        var codigoReferenciaInput = document.getElementById('codigoReferenciaInput');
                                        var modal = new bootstrap.Modal(document.getElementById('codigoReferenciaModal'));
                                        var confirmarBtn = document.getElementById('confirmarCodigoReferencia');
                                        var cancelarBtn = document.getElementById('cancelarCodigoReferencia');
                                        var submitAllowed = false;

                                        form.addEventListener('submit', function (e) {
                                            if (submitAllowed) {
                                                submitAllowed = false;
                                                return true;
                                            }
                                            var valor = codigoReferenciaInput ? codigoReferenciaInput.value.trim() : '';
                                            if (!valor) {
                                                e.preventDefault();
                                                modal.show();
                                            }
                                        });

                                        confirmarBtn.addEventListener('click', function () {
                                            submitAllowed = true;
                                            modal.hide();
                                            form.submit();
                                        });

                                        cancelarBtn.addEventListener('click', function () {
                                            submitAllowed = false;
                                        });
                                    });
                                </script>
                            }
                            
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

