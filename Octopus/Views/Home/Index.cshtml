@section Scripts {
    <script>
        async function toggleReferidosDinamico(usuarioId, nivel, btn) {
          const maxLevel = 4;
          const currRow = document.querySelector(`#nivel-${nivel} .row`);
          const nextLevel = nivel + 1;
          const isHiding = btn.innerText === 'OCULTAR REFERIDOS';

          if (isHiding) {
            // 1) Limpiar TODOS los niveles >= nextLevel
            for (let lv = nextLevel; lv <= maxLevel; lv++) {
              document.querySelector(`#nivel-${lv} .row`).innerHTML = '';
            }

            // 2) Restaurar visibilidad de TODOS los hermanos en EL nivel actual
            currRow
              .querySelectorAll('.col-6, .col-md-4, .col-lg-2')
              .forEach(col => {
                col.style.display = '';
                const b = col.querySelector('button.btn-outline-danger');
                if (b) b.innerText = 'VER REFERIDOS';
              });

            return;
          }


          // 3) Limpiar TODOS los niveles >= nextLevel
          for (let lv = nextLevel; lv <= maxLevel; lv++) {
            document.querySelector(`#nivel-${lv} .row`).innerHTML = '';
          }

          // 4) Ocultar hermanos en nivel actual
          currRow
            .querySelectorAll('.col-6, .col-md-4, .col-lg-2')
            .forEach(col => {
              if (!col.contains(btn)) col.style.display = 'none';
            });

          // 5) Traer y pintar hijos en el siguiente nivel
          const resp = await fetch(`/Home/GetReferidosPartial?usuarioId=${usuarioId}`);
          if (!resp.ok) {
            console.error('Error cargando referidos de usuario', usuarioId);
            return;
          }
          const html = await resp.text();
          document.querySelector(`#nivel-${nextLevel} .row`).innerHTML = html;

          // 6) Marcar el botón como “OCULTAR”
          btn.innerText = 'OCULTAR REFERIDOS';
        }
    </script>
}



